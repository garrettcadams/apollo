{
  "name": "apollo",
  "type": "project",
  "license": "MIT",
  "description": "A WordPress theme bundle.",
  "homepage": "https://github.com/j2made/apollo",
  "authors": [
    {
      "name": "Daniel Olson",
      "email": "emaildano@gmail.com",
      "homepage": "https://github.com/emaildano"
    },
    {
      "name": "Shaun M. Baer",
      "email": "shaun.baer@gmail.com",
      "homepage": "https://github.com/iamhexcoder"
    }
  ],
  "keywords": [
    "wordpress", "stack", "composer", "theme", "wp"
  ],
  "support": {
    "issues": "https://github.com/j2made/apollo/issues"
  },
  "config": {
    "preferred-install": "dist",
    "vendor-dir": "lib/vendor/"
  },
  "scripts": {
    "pre-install-cmd": [
      "php -r \"if(!file_exists('env.php')) { copy('lib/config/env-sample.php', 'env.php'); }\"",
      "php -r \"if(!file_exists('wp-config.php')) { copy('lib/config/wp-config-sample.php', 'wp-config.php'); }\""
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "j2made/wp-indexing",
        "version": "1.0.0",
        "type": "wordpress-muplugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/j2made/wp-indexing/archive/master.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.4",
    "johnpbloch/wordpress": "4.4",
    "j2made/wp-indexing": "1.0.0",
    "composer/installers": "v1.0.21"
  },
  "extra": {
    "installer-paths": {
      "app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "app/plugins/{$name}/": ["type:wordpress-plugin"],
      "./": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "wp"
  }
}
